@page
@model AbbyWeb.Pages.Categories.CreateModel

<form method="post">
    <div class="border p-3 mt-4">
        <h2 class = "text-primary pl-3">Create Category</h2>
        <hr />
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" class="form-control" />
            <span aps-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="Category.DisplayOrder" class="form-control" />
            <span aps-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn" btn-primary style="width:150px;">Create</button>
    </div>
</form>

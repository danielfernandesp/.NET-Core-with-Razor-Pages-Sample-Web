@page
@model AbbyWeb.Pages.Categories.IndexModel

<div class = "container p-3">
    <div class = "row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6">
            <a asp-page="create" class="bt btn-primary">
                Create New Category
        </div>
    </div>

    <br/><br/>

    <table class="table table-bordered table-striped" style="widht:100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
            </tr>
        </thead>
        <tbody>
            <!--- Creating list  -->
            @foreach(var obj in Model.Categories)
            {
                <tr>
                    <td widht="50%">@obj.Name</td>
                    <td widht="30%">@obj.DisplayOrder</td>
                </tr>
            }
        </tbody>
    </table>  
</div>
